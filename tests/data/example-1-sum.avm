; let rec sum x a =
;     if x = 0 then a
;     else sum (x - 1) (x + a)
; in sum 10 0
main:
    dum 1
    clos sum
    upd 0			; env = [sum]
    mark
    load 0  push
    load 10 push
    acc 0
    app
    endlet
    ret
sum:
    grab			; env = [a x sum]
    load 0 push
    acc 1
    eq
    bf L00
    acc 0
    ret
L00:
    acc 0  push
    acc 1
    add    push
    load 1 push
    acc 1
    sub    push
    acc 2
    tapp