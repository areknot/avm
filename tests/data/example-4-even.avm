; let rec even = function
;   | 0 -> true
;   | n -> odd (n - 1)
; and odd = function
;   | 0 -> false
;   | n -> even (n - 1)
; in even 21
main:
    dum 2
    clos odd
    upd 0
    clos even
    upd 1			; env = [odd even]
    mark
    load 21 push
    acc 1
    app
    endlet endlet
    ret
even:
    load 0 push			; env = [n odd even]
    acc 0
    eq
    bf L00
    load true
    ret
L00:
    load 1 push
    acc 0
    sub    push
    acc 1
    tapp

odd:
    load 0 push			; env = [n odd even]
    acc 0
    eq
    bf L01
    load false
    ret
L01:
    load 1 push
    acc 0
    sub push
    acc 2
    tapp